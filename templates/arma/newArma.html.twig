{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}


<div class="example-wrapper">
  <div class="container">    
    <div class="row">
  <div class="col s12">
    <form id="example-form">
      <div>
      <h3>Inf Del Arma</h3>
    <section>
        <div class="row">
          <div class="input-field col s12 m12 l12">
            <input name="nombre-armal" id="nombre-arma" type="text" class="validate">
            <label for="nombre-arma">Nombre del arma</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6 l4">
            
            <select id="tipo" name="tipo">
              <option value="" disabled selected>De que tipo es el arma?</option>
              {% for tipo in tipos %}
                <option value={{tipo.id}}>{{ tipo.nombreTipo|e }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="input-field col s12 m6 l4">
            
            <select id="material_frab" name="material">
              <option value="" disabled selected>Escoje un matrial</option>
              {% for material in materiales %}
                <option value={{material.id}}>{{ material.material|e }}</option>
              {% endfor %}
            </select>
          </div>  
          <div class="input-field col s12 m6 l4">
            <div class="row">
              <div class="input-field col s12 m6 l6">
                <label>
                  <input name="manos" type="radio" value="1"  />
                  <span>Una mano</span>
                </label>
              </div>
              <div class="input-field col s12 m6 l6">
                <label>
                  <input name="manos" type="radio" value="2"  />
                  <span>Dos manos</span>
                </label>
              </div>
            </div>              
          </div>
          <div class="input-field col s12 m6 l12">
            <div class="row">
              <div class="input-field col s12 m6 l4">
                <label for="danio">Daño del arma</label>
                <input type="text" name="danio">
              </div>
              <div class="input-field col s12 m6 l4">
                <label for="danioBase">Daño base del arma</label>
                <input type="text" name="danioBase">
              </div>
              <div class="input-field col s12 m6 l4">
                <label for="fue">FUE</label>
                <input type="number" name="fue">
              </div>
            </div>              
          </div>
          <div class="input-field col s12 m6 l12">
            <div class="row">
              <div class="input-field col s12 m6 l4">
                <label for="des">DES</label>
                <input type="number" name="des">
              </div>
              <div class="input-field col s12 m6 l4">
                <label for="car">Car del arma</label>
                <input type="number" step="0.01" name="car">
              </div>
              <div class="input-field col s12 m6 l4">
                <label for="danioBase">Probabilidad base del arma</label>
                <input type="text" name="danioBase">
              </div>
            </div>              
          </div>
          <div class="input-field col s12 m6 l12">
            <div class="row">
              <div class="input-field col s12 m6 l6">
                <label for="pa">Punto de armadura del arma</label>
                <input type="number" name="pa">
              </div>
              <div class="input-field col s12 m6 l6">
                <label for="mr">Momento de reacción del arma</label>
                <input type="number" name="mr">
              </div>           
            </div>              
          </div>
      </div>
    </section>
    <h3>Alcances (opcional)</h3>
      <section>
        <label for="ef">ef del arma (alcance efectivo)</label>
        <input type="number" name="ef">
        <br>

        <label for="tf">tf del arma</label>
        <input type="number" name="tf">
        <br>  
      </section>
      <h3>Precios de las armas </h3>
      <section>
        <label for="psalv">Precio en tierras salvajes</label>
        <input type="number" name="psalv">
        <br>
        <br>
        <label for="prural">Precio en medio rural</label>
        <input type="number" name="prural">
        <br>
        <br>
        <label for="ppque">Precio en ciudades pequeñas/medianas</label>
        <input type="number" name="ppque">
        <br>
        <br>
        <label for="pgrand">Precio en grandes ciudades/metrópolis</label>
        <input type="number" name="pgrand">
        <br>
        <br>
        <label for="tfav">Tiempo de fabricación</label>
        <input type="number" step="0.01" name="tfav">
        <span>
      </section>
    
      </div>
    </form>
  </div>
</div>

    </form>
  <div class="container">
</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('js/jquery.steps.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('js/armas.js') }}"></script>

{% endblock %}